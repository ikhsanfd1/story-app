{
  "ignorePatterns": ["node_modules/", "dist/", "build/", "webpack*.js", "generated/", "*.json"],
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "plugins": ["lit"],
  "rules": {
    "no-unused-vars": "off",
    "no-class-assign": "off",
    "no-undef": "off",
    "lit/no-invalid-html": "off",
    "lit/attribute-value-entities": "off"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "module": "readonly"
  }
}
